{
  "name": "re-nostr",
  "private": true,
  "version": "0.0.1",
  "description": "Send notes and other stuff to Nostr from anywhere around the web",
  "scripts": {
    "build": "stencil build && web-ext build --overwrite-dest",
    "start": "stencil build --serve --watch",
    "lint": "web-ext lint",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "main": "./dist/index.cjs.js",
  "collection": "./dist/collection/collection-manifest.json",
  "dependencies": {
    "@nostr-dev-kit/ndk": "^1.3.2",
    "@types/debug": "^4.1.9",
    "ionicons": "^7.2.1"
  },
  "devDependencies": {
    "@stencil/core": "^4.3.0",
    "@types/jest": "~27.0.3",
    "@types/webextension-polyfill": "^0.10.2",
    "jest": "~27.0.3",
    "jest-cli": "~27.4.5",
    "puppeteer": "^20.4.0",
    "web-ext": "^7.7.0",
    "webextension-polyfill": "^0.10.0"
  },
  "license": "MIT"
}
